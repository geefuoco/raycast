{ 
    "compilerOptions": { 
        "rootDir": "src", 
        "outDir": "build", 
        "target": "es6", 
        "allowJs": true, 
        "sourceMap": true,
        "moduleResolution": "node", 
        "module": "commonjs", 
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true, 
        "forceConsistentCasingInFileNames": true, 
        "strict": true, 
        "skipLibCheck": true 
    }, 
    "include": ["src"], 
    "exclude": ["node_modules", "build"] 
}
